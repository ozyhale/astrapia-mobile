<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/svReg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        tools:context=".RegistrationActivity">

        <ProgressBar
            android:id="@+id/pbReg"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:max="100"
            android:progress="50"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="First Name"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/etRegFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:ems="10"
            android:inputType="textPersonName"
            tools:ignore="LabelFor" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Middle Name"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/etRegMiddleName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:ems="10"
            android:inputType="textPersonName"
            tools:ignore="LabelFor" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last Name"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/etRegLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:ems="10"
            android:inputType="textPersonName"
            tools:ignore="LabelFor" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/etRegEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:ems="10"
            android:inputType="textEmailAddress"
            tools:ignore="LabelFor" />

        <TextView
            android:id="@+id/tvRegPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/etRegPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:ems="10"
            android:inputType="textPassword"
            tools:ignore="LabelFor" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Retype Password"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/etRegRetypePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:ems="10"
            android:inputType="textPassword"
            tools:ignore="LabelFor" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbRegTeacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onRadioButtonClicked"
                android:text="Teacher"
                tools:ignore="HardcodedText" />

            <RadioButton
                android:id="@+id/rbRegParent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onRadioButtonClicked"
                android:text="Parent"
                tools:ignore="HardcodedText" />
        </RadioGroup>

        <TextView
            android:id="@+id/tvRegSchoolID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Student ID (School ID) (separated by comma, max of 10)"
            android:visibility="gone"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/etRegSchoolID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:ems="10"
            android:inputType="textPersonName"
            android:visibility="gone"
            tools:ignore="LabelFor" />

        <TextView
            android:id="@+id/tvRegTeacherCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Teacher Code"
            android:visibility="gone"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/etRegTeacherCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:ems="10"
            android:inputType="textPersonName"
            android:visibility="gone"
            tools:ignore="LabelFor" />

        <Button
            android:id="@+id/btnRegRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:onClick="register"
            android:text="Register"
            tools:ignore="HardcodedText,RtlHardcoded" />


    </LinearLayout>

</ScrollView>