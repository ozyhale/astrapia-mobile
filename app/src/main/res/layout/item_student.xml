<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/tv_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="First Name: [first_name]"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_middle_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Middle Name: [middle_name]"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last Name; [last_name]"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_school_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID: [school_id]"
            tools:ignore="HardcodedText" />

        <ImageButton
            android:id="@+id/btnShowStudentSubjects"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="46dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            app:srcCompat="@drawable/ic_arrow_forward_black_24dp"
            android:contentDescription="TODO"
            tools:ignore="ContentDescription,HardcodedText,RtlHardcoded" />
    </LinearLayout>

</androidx.cardview.widget.CardView>